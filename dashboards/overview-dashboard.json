{
  "widgets": [
    {
      "type": "text",
      "x": 0,
      "y": 0,
      "width": 24,
      "height": 2,
      "properties": {
        "markdown": "# Kubernetes Observability Pipeline Overview\n**Cluster:** observability-cluster | **Region:** us-east-1 | **Environment:** Production"
      }
    },
    {
      "type": "metric",
      "x": 0,
      "y": 2,
      "width": 8,
      "height": 4,
      "properties": {
        "title": "Total Log Events (Last Hour)",
        "region": "us-east-1",
        "metrics": [
          [
            "AWS/Logs",
            "IncomingLogEvents",
            "LogGroupName",
            "/vector/logs/application",
            {
              "stat": "Sum",
              "period": 3600
            }
          ]
        ],
        "view": "singleValue"
      }
    },
    {
      "type": "metric",
      "x": 8,
      "y": 2,
      "width": 8,
      "height": 4,
      "properties": {
        "title": "Avg CPU Usage",
        "region": "us-east-1",
        "metrics": [
          [
            "Vector/Application",
            "cpu_usage_percent",
            {
              "stat": "Average"
            }
          ]
        ],
        "view": "singleValue"
      }
    },
    {
      "type": "metric",
      "x": 16,
      "y": 2,
      "width": 8,
      "height": 4,
      "properties": {
        "title": "Active Connections",
        "region": "us-east-1",
        "metrics": [
          [
            "Vector/Application",
            "active_connections",
            {
              "stat": "Average"
            }
          ]
        ],
        "view": "singleValue"
      }
    },
    {
      "type": "log",
      "x": 0,
      "y": 6,
      "width": 12,
      "height": 6,
      "properties": {
        "title": "Error Count (Last Hour)",
        "region": "us-east-1",
        "query": "SOURCE '/vector/logs/application' | filter level = 'error' | stats count(*) as error_count by bin(5m)",
        "view": "timeSeries"
      }
    },
    {
      "type": "log",
      "x": 12,
      "y": 6,
      "width": 12,
      "height": 6,
      "properties": {
        "title": "Service Health Status",
        "region": "us-east-1",
        "query": "SOURCE '/vector/logs/application' | stats count(*) as total, count_distinct(level) as levels by service | sort total desc",
        "view": "table"
      }
    }
  ]
}
